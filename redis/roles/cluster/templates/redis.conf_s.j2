bind {{ ansible_default_ipv4.address }}
protected-mode no
port {{ redis_port_s }}
cluster-enabled yes
cluster-config-file nodes_{{ redis_port_s }}.conf
cluster-node-timeout 5000
appendonly yes
appendfilename "appendonly-{{ redis_port_s }}.aof" 
dbfilename dump-{{ redis_port_s }}.rdb  
pidfile {{ redis_workdir }}/redis_{{ redis_port_s }}.pid
logfile {{ redis_workdir }}/log/redis_{{ redis_port_s }}.log
dir /opt/redis
daemonize yes